if has('nvim')
  let $MYVIMRC=$HOME . "/.config/nvim/init.vim"
else
  if empty($XDG_DATA_HOME)
    let $XDG_DATA_HOME=$HOME . "/.local/share"
  endif

  if empty($XDG_CONFIG_HOME)
    let $XDG_CONFIG_HOME=$HOME . "/.config"
  endif

  if empty($XDG_STATE_HOME)
    let $XDG_STATE_HOME=$HOME . "/.local/state"
  endif

  if empty($XDG_CACHE_HOME)
    let $XDG_CACHE_HOME=$HOME . "/.cache"
  endif

  set directory=$XDG_STATE_HOME/vim/swap//
  set undodir=$XDG_STATE_HOME/vim/undo//
  set backupdir=$XDG_STATE_HOME/vim/backup//

  set runtimepath=
  set runtimepath+=$XDG_CONFIG_HOME/vim
  set runtimepath+=$XDG_DATA_HOME/vim
  set runtimepath+=$VIM/vimfiles
  set runtimepath+=$VIMRUNTIME
  set runtimepath+=$VIM/vimfiles/after
  set runtimepath+=$XDG_DATA_HOME/vim/after
  set runtimepath+=$XDG_CONFIG_HOME/vim/after

  set packpath=
  set packpath+=$XDG_CONFIG_HOME/vim
  set packpath+=$XDG_DATA_HOME/vim
  set packpath+=$VIM/vimfiles
  set packpath+=$VIMRUNTIME
  set packpath+=$VIM/vimfiles/after
  set packpath+=$XDG_DATA_HOME/vim/after
  set packpath+=$XDG_CONFIG_HOME/vim/after

  set viminfofile=$XDG_STATE_HOME/vim/viminfo

  let $MYVIMRC="$XDG_CONFIG_HOME/vim/vimrc"
endif

source $MYVIMRC
