#!/usr/bin/env bash

TMUX=$2

if [[ "x$TMUX" -eq "x" ]]
then
  TMUX=tmux
fi

if [[ -z "$1" ]]
then
  echo "You must specify a session name" >&2
fi

$TMUX -u has-session -t "$1"

if [[ $? -ne 0 ]]
then
  echo "Creating session $1"
  ssh-agent $TMUX -u new-session -d -s "$1"
fi

$TMUX -u attach-session -t "$1"
