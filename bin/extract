#!/usr/bin/env zsh


extract() {
  local program args file
  args=()

  file="$1"
  destination="$2"

  if [[ -f "$file" ]]; then
    case "$file" in
      *.tar.bz2)
        program=tar
        args+='xvjf'
        ;;
      *.tar.gz)
        program=tar
        args+='xvzf'
        ;;
      *.tar.xz)
        program=tar
        args+='xvJf'
        ;;
      *.tar.lzma)
        program=tar
        args+='--lzma'
        args+='-xvf'
        ;;
      *.bz2)
        program=bunzip
        ;;
      *.rar)
        program=unrar
        args+='e'
        ;;
      *.gz)
        program=gunzip
        ;;
      *.tar)
        program=tar
        args+='xvf'
        ;;
      *.tbz2)
        program=tar
        args+='xvjf'
        ;;
      *.tgz)
        program=tar
        args+='xvzf'
        ;;
      *.zip)
        program=unzip
        ;;
      *.Z)
        program=uncompress
        ;;
      *.7z)
        program=7z
        ;;
      *)
        echo "'$file' cannot be extracted via extract"
        exit 1
        ;;
    esac
  else
    echo "'$file' is not a valid file"
    exit 1
  fi

  if [[ -d "$destination" ]]; then
    case "$program" in
      unzip)
        args+="-d"
        args+="$destination"
        ;;
      *)
        echo "extracting to a destination is not supported for $program yet"
        exit 2
        ;;
    esac
  fi

  echo "$program $args $file"
  $program $args $file
}

extract $*
