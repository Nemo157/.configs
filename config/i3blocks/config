command=~/.i3/blocks/$BLOCK_NAME
separator_block_width=15
markup=none


[arch-update]
interval=43200
markup=pango

[mediaplayer]
instance=mpd
interval=5

[volume]
label=VOL
instance=Master
interval=60


[memory]
label=MEM
separator=false
interval=30

[memory]
label=SWAP
instance=swap
interval=30

[disk]
label=ROOT
instance=/
separator=false
interval=30

[disk]
label=HOME
instance=/home
interval=30


[wifi]
label=wlp3s0:
instance=wlp3s0
interval=10
separator=false

[iface]
instance=wlp3s0
interval=10
separator=false

[bandwidth3]
command=~/.i3/blocks/$BLOCK_NAME -p 'printf "%4.1f/%-4.1f %s/s\n", rx, wx, unit'
interval=persist


[cpu_usage]
label=CPU
interval=10
separator=false

[load_average]
label=LOAD
interval=10
separator=false

[temperature]
label=TEMP
interval=10


[battery]
label=BATT
interval=30


[time]
command=date '+%Y-%m-%d %H:%M:%S'
interval=1
