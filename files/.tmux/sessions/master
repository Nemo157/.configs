#!/usr/bin/env sh

NAME="$1"

tmux new-session -d -s "$NAME"

if [[ -x /usr/bin/pmset ]];
then
  tmux set -g status-right "#[fg=brightcyan][#[default]#(/usr/bin/pmset -g batt | grep InternalBattery | cut -f2)#[fg=brightcyan]] #[fg=brightcyan][#[default]%F#[fg=brightcyan]] #[fg=brightcyan][#[default]%R#[fg=brightcyan]]"
fi
