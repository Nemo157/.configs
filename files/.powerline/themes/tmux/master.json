{
  "default_module": "powerline.segments.common",
  "segments": {
    "left": [ {
      "name": "hostname",
      "args": {
        "exclude_domain": true
      }
    }, {
      "type": "string",
      "contents": "master",
      "highlight_group": "session"
    } ],
    "right": [ {
      "module": "battery",
      "name": "format",
      "args": {
        "format": "%(current_source)s %(current_percent)d%%%(formatted_time_remaining)s",
        "time_format": " (%(fuzzy_time_remaining)s%(charging_state)s)",
        "charging_text": " till charged",
        "discharging_text": " till empty",
        "AC_text": "ðŸ”Œ ",
        "battery_text": "ðŸ”‹ "
      }
    }, {
      "name": "date",
      "args": {
        "format": "%F"
      }
    }, {
      "name": "date",
      "args": {
        "format": "%R",
        "istime": true
      }
    }, {
      "name": "system_load"
    } ]
  }
}
